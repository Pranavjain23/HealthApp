<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:background="#ffffff"
    app:cardCornerRadius="20dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="#f5f5f5">


    <LinearLayout
        android:id="@+id/llMeal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="8">

        <ImageView
            android:id="@+id/dishImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:layout_margin="7dp"
            android:src="@drawable/weight"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dishName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:text="Dish name comes here"/>

            <TextView
                android:id="@+id/dishTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="6dp"
                android:text="50 mins"/>

            <TextView
                android:id="@+id/dishLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="2dp"
                android:drawableLeft="@drawable/ic_cook"
                android:drawablePadding="6dp"
                android:text="Easy"/>

            <TextView
                android:id="@+id/dishVeg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_veg_nonveg"
                android:drawablePadding="6dp"
                android:textSize="14sp"
                android:text="Vegetarian"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>