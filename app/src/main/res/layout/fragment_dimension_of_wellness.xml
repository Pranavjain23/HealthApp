<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DimensionOfWellnessFragment"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="4.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dimensions of Wellness"
                        android:textSize="22sp"
                        android:paddingStart="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Find the five main aspects of personal health!"
                        android:textSize="12sp"
                        android:paddingStart="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1.5"
                    android:src="@drawable/dowlogo"/>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/physical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:cardCornerRadius="15dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:padding="10dp"
                    android:background="@drawable/pink_background">


                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:src="@drawable/physical"/>

                    <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/caveat"
                        android:text="PHYSICAL WELLNESS"
                        android:textSize="18sp"/>
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/emotional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:padding="10dp"
                    android:background="@drawable/pink_background">

                    <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:layout_centerInParent="true"
                            android:text="EMOTIONAL WELLNESS"
                            android:fontFamily="@font/caveat"
                            android:textSize="18sp"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:src="@drawable/emotional"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/social"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:padding="10dp"
                    android:background="@drawable/pink_background">


                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:src="@drawable/social"/>

                    <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:layout_centerInParent="true"
                            android:text="SOCIAL WELLNESS"
                            android:fontFamily="@font/caveat"
                            android:textSize="18sp"/>
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/spiritual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:padding="10dp"
                    android:background="@drawable/pink_background">

                    <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SPIRITUAL WELLNESS"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:fontFamily="@font/caveat"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:src="@drawable/spiritual"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/intellectual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:padding="10dp"
                    android:background="@drawable/pink_background">


                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:src="@drawable/intellectual"/>

                    <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:layout_centerInParent="true"
                            android:text="INTELLECTUAL WELLNESS"
                            android:fontFamily="@font/caveat"
                            android:textSize="18sp"/>
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </RelativeLayout>


</ScrollView>