<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.GymFragment"
    android:background="@color/colorWhite">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:id="@+id/gymFragmentMain">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/welcomeuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Hello User!"
                android:textSize="25sp"
                android:paddingStart="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Let's workout to get some gains!"
                android:textSize="13sp"
                android:paddingStart="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.5"
            android:src="@drawable/gymuserlogo"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/beginner"
        android:layout_below="@id/welcomeuser"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="15dp"
        android:clickable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/blue_background"
        android:weightSum="7">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/beggym"/>

        </RelativeLayout>


        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/txtBeginner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEGINNER"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="27sp"/>

            <TextView
                android:id="@+id/txtBeginner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GYM"
                android:textAlignment="center"
                android:layout_below="@id/txtBeginner"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="27sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtBeginner1"
                android:text="3 days body workout routine"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="13sp"
            />

        </RelativeLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/intermediate"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/beginner"
        app:cardCornerRadius="15dp"
        android:clickable="true"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/pink_background"
        android:weightSum="7">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5.2"
            android:orientation="vertical"
            android:weightSum="5.5"
            android:layout_marginTop="25dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/txtIntermediate"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="INTERMEDIATE"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="26sp"/>

            <TextView
                android:id="@+id/txtIntermediate1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:text="GYM"
                android:layout_below="@id/txtIntermediate"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="26sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_below="@id/txtIntermediate1"
                android:text="5 days body workout routine"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="13sp"
                />

        </LinearLayout>



            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/intgym"/>

            </RelativeLayout>



    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/advance"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/intermediate"
        app:cardCornerRadius="15dp"
        android:clickable="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/orange_background"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/advgym"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/txtAdvance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADVANCE"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="27sp"/>

                <TextView
                    android:id="@+id/txtAdvance1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GYM"
                    android:layout_below="@id/txtAdvance"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="27sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAdvance1"
                    android:text="7 days body workout routine"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>
